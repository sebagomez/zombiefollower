	"version": "0.2.0",
	"configurations": [
		{
			"name": ".NET Core Launch (console)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/src/bin/Debug/net6.0/zombiefollower.dll",
			"args": ["follow", "--search", "KubeCon"],
			//"args": ["unfollow"],
			"cwd": "${workspaceFolder}/src",
			"console": "internalConsole",
			"stopAtEntry": false,
			"env": {
			}
		},
		{
			"name": ".NET Core Attach",
			"type": "coreclr",
			"request": "attach"
		}
	]
}